---
  import Layout from '../layouts/Layout.astro';
  import Icon from '@components/common/Icon.astro';

  import { Image } from 'astro:assets';

  import bgImage from "@assets/images/bg/contact.webp"
import ContactSection from '@components/ContactSection.astro';
---

<Layout title="Contacto | Labinst">
  <!-- Bg Image -->
  <Image class="bgImage" src={bgImage} alt="bg" />

  <section class="flex flex-col justify-start gap-3 px-16 py-7 bg-gray0/50 border border-gray1 rounded-lg backdrop-blur-sm m-auto">
    <h1 class="text-accent italic font-medium text-8xl">Contacto</h1>
    <p class="text-2xl text-balance">
      ¿Tienes alguna pregunta o necesitas ayuda? <strong>¡Estamos aquí para ti!</strong>
    </p>
    <ContactSection class="contact-card !m-0 !my-6 !gap-5" />
  </section>
</Layout>

<style is:global>
  @reference "../styles/global.css";

  .contact-card .contact-icon {
    @apply !min-w-13 !w-13 h-12;
  }

  .contact-card .contact-section {
    @apply !items-center !gap-6;
  }

  .contact-card .contact-section > p {
    @apply !text-2xl;
  }

</style>