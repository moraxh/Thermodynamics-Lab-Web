---
  import Icon from "@src/components/common/Icon.astro";
import AdminPanel from "@src/layouts/AdminPanel.astro";

  if (!Astro.locals.user) {
    return Astro.redirect('/login')
  }
---

<AdminPanel title="Panel de Administrador">
  <section class="flex flex-col gap-3 justify-center items-center m-auto">
    <Icon name="happyFace" class="fill-accent h-64" />

    <h1 class="text-3xl text-center">
      Bienvenido al
      <br>
      <strong class="text-5xl text-accent">Admin Panel</strong>
    </h1>

    <p class="text-center font-bold text-gray2">
      ¡Puedes configurar y modificar
      <br>
      el sitio web desde aquí!
    </p>
  </section>
</AdminPanel>